  "dependencies": {
    "@11ty/eleventy": "^1.0.0-beta.8",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@chrisburnell/bowhead": "^0.2.2",
    "@chrisburnell/pentatonic": "^1.0.1",
    "@chrisburnell/spark-line": "^1.0.4",
    "@tbranyen/jsdom": "^13.0.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^10.0.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.0.0",
    "json-to-scss": "^1.6.2",
    "libvips": "^0.0.2",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "natural": "^5.1.1",
    "node-fetch": "2.6.5",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.4.1",
    "sanitize-html": "^2.5.2",
    "sass": "^1.43.4",
    "slugify": "^1.6.1",
    "twitter-avatar-url": "^2.1.0",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "clean": "rm -rf .cache && rm -rf _site",
    "palette": "json-to-scss src/data/opacities.json src/scss/generated/_opacities.scss; json-to-scss src/data/palette.json src/scss/generated/_palette.scss",
    "scss": "npx sass src/scss:css --no-source-map --color",
    "prefix": "npx postcss css/*.css --replace --no-map --use=autoprefixer",
    "js": "npx uglifyjs _site/js/main.js -o _site/js/main.js",
    "prettier": "npx prettier --write src",
    "start": "concurrently \"npm run scss -- --watch\" \"npx @11ty/eleventy --serve --quiet\"",
    "serve": "npm run start",
    "build": "npm run palette; npm run scss -- --style=compressed; npm run prefix; npm run prettier; ELEVENTY_PRODUCTION=true npx @11ty/eleventy",
    "debug": "cross-env DEBUG=* npx @11ty/eleventy"
  }
}
