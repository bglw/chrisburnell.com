  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@chrisburnell/bowhead": "^0.2.2",
    "@chrisburnell/eleventy-cache-webmentions": "^0.1.9",
    "@chrisburnell/pentatonic": "^1.1.0",
    "@chrisburnell/spark-line": "^1.1.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "autoprefixer": "^10.4.2",
    "caniuse-api": "^3.0.0",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^10.0.0",
    "glob-promise": "^4.2.2",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.6.2",
    "luxon": "^2.3.0",
    "natural": "^5.1.13",
    "node-fetch": "2.6.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.47.0",
    "slugify": "^1.6.5",
    "twitter-avatar-url": "^2.1.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "clean": "rm -rf .cache && rm -rf _site",
    "palette": "json-to-scss src/data/opacities.json src/scss/generated/_opacities.scss; json-to-scss src/data/palette.json src/scss/generated/_palette.scss",
    "scss": "npx sass src/scss:css --no-source-map --color",
    "prefix": "npx postcss css/*.css --replace --no-map --use=autoprefixer",
    "js": "npx rollup -c",
    "prettier": "npx prettier --write src",
    "start": "concurrently \"npm run js -- --watch\" \"npm run scss -- --watch\" \"npx @11ty/eleventy --serve --quiet\"",
    "serve": "npm run start",
    "build": "npm run palette; npm run js; npm run scss -- --style=compressed; npm run prefix; npm run prettier; cross-env ELEVENTY_PRODUCTION=true npx @11ty/eleventy",
    "pregenerate": "npm run palette; npm run scss -- --style=compressed; npm run prefix; npm run prettier; cross-env PREGENERATE_IMAGES=true npx @11ty/eleventy",
    "debug": "cross-env DEBUG=* npx @11ty/eleventy"
  }
}
