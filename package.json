    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@chrisburnell/bowhead": "^0.3.1",
    "@chrisburnell/eleventy-cache-webmentions": "^1.0.0",
    "@chrisburnell/pentatonic": "^1.1.1",
    "@chrisburnell/spark-line": "^1.2.0",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.0.0",
    "@zachleat/details-utils": "^2.0.2",
    "@zachleat/seven-minute-tabs": "^2.0.0",
    "autoprefixer": "^10.4.8",
    "caniuse-api": "^3.0.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.0.2",
    "glob-promise": "^5.0.0",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.6.2",
    "luxon": "^3.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-abbr": "^1.0.4",
    "natural": "^5.2.3",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.54.8",
    "slugify": "^1.6.5",
    "twitter-avatar-url": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "clean": "rm -rf .cache && rm -rf _site",
    "tokens": "npx json-to-scss './src/data/designTokens/*.json' ./src/css/abstracts/_generated.scss; npx prettier --write src/css/abstracts/_generated.scss",
    "css": "npx sass src/css:css --no-source-map --color",
    "aftercss": "npx postcss css/*.css --replace --no-map",
    "js": "npx rollup -c",
    "prettier": "npx prettier --write src",
    "start": "concurrently \"npm run js -- --watch\" \"npm run css -- --watch\" \"npx @11ty/eleventy --incremental --serve --quiet\"",
    "serve": "npm run start",
    "build": "npm run tokens; npm run js; npm run css -- --style=compressed; npm run aftercss; npm run prettier; npx browserslist@latest --update-db; cross-env ELEVENTY_PRODUCTION=true npx @11ty/eleventy",
    "pregenerate": "npm run tokens; npm run css -- --style=compressed; npm run aftercss; npm run prettier; cross-env PREGENERATE_IMAGES=true npx @11ty/eleventy",
    "debug": "cross-env DEBUG=* npx @11ty/eleventy"
  },
  "imports": {
    "#data/*": "./src/data/*.json",
    "#datajs/*": "./src/data/*.js",
    "#core/*": "./src/eleventy/*.js",
    "#builders/*": "./src/eleventy/collectionBuilders/*.js",
    "#filters/*": "./src/eleventy/filters/*.js",
    "#plugins/*": "./src/eleventy/plugins/*.js",
    "#transforms/*": "./src/eleventy/transforms/*.js"
  }
}
