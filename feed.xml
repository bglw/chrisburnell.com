---
layout: feed
searchable: false
sitemap:
  exclude: true

title: Full Feed
lede: All of my posts.
category_path: ''
---

{%- assign all_posts = site.posts | date_sort -%}
{%- assign posts_without_replies = site.emptyArray -%}
{%- for page in all_posts -%}
    {%- if page.rsvp or page.in_reply_to.first == nil -%}
        {%- assign posts_without_replies = posts_without_replies | push: page -%}
    {%- endif -%}
{%- endfor -%}
{%- assign concatenated_posts = posts_without_replies | concat: site.beer | concat: site.music | sort: 'date' | reverse -%}
{% for page in concatenated_posts limit: site.feed_limit %}
    {% include components/item-feed.html %}
{% endfor %}
