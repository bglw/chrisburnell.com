---
layout: feed
searchable: false
sitemap:
  exclude: true

title: Full Feed
lede: All of my posts.
category_path: ''
---

{%- assign posts_without_replies = site.emptyArray -%}
{%- for page in site.posts -%}
    {%- unless page.categories contains 'like' -%}
        {%- if page.rsvp or page.in_reply_to.first == nil -%}
            {%- assign posts_without_replies = posts_without_replies | push: page -%}
        {%- endif -%}
    {%- endunless -%}
{%- endfor -%}
{% for page in posts_without_replies limit: site.feed_limit %}
    {% include components/item-feed.html %}
{% endfor %}
