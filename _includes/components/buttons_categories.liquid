{%- comment -%}

  Generates a Buttons List from the current category

  @param {String} category *

{%- endcomment -%}
<nav class="buttons-list" role="navigation">
    {% include components/webmentions_button.liquid %}
    {% include components/comments_button.liquid %}
    {% if page.category %}
        {%- assign metadata = site.data.categories | where: 'category', page.category | first -%}
    {% elsif page.sparkline %}
        {%- assign metadata = site.data.categories | where: 'type', page.sparkline | first -%}
    {% endif %}
    <a class="button" href="/posts">
        {% include_cached content/svg.liquid type='article' %}
        All Posts
    </a>
    {% if metadata %}
        {% if page.category %}
            <a class="button" href="/{{ metadata.type }}">
                {% include_cached content/svg.liquid type=metadata.icon %}
                {{ metadata.title }}
            </a>
        {% endif %}
        <a class="button" rel="alternate" href="/{{ metadata.type }}.xml">
            {% include_cached content/svg.liquid type='rss' %}
            {{ metadata.title }} Feed
        </a>
    {% endif %}
</nav>
