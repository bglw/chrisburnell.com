---
layout: base
---
{% from 'macros/deckItem.njk' import deckItem %}
{%- set collection = collections[related_collection] -%}
{%- set count = collection.length -%}
{%- set latest_year = collection[0].date.getFullYear() -%}
{%- set first_year = collection[count-1].date.getFullYear() -%}
<div id="content" class=" [ content ] [ wrap ] [ archive ] ">

    <h1 id="title" class=" [ title ] ">
        <span class="p-name">{{ title | safe }}</span>
        {% sparkline title, collection %}
    </h1>

    <div class=" [ details ] ">
        <p class=" [ p-summary ] ">{{ lede | replace('.', '') | safe }}{% if first_year != latest_year %}, dating from <a href="#{{ first_year }}">{{ first_year }}</a>â€“<a href="#{{ latest_year }}">{{ latest_year }}</a>{% endif %}.</p>
    </div>

    <div class=" [ content__body ] [ h-feed ] ">
        {%- set year = latest_year -%}
        <h2 id="{{ year }}">
            {{ year }}
            <small>({{ collection | getCountByYear(year) }})</small>
            <a href="#{{ year }}" class="fragment-anchor">
                <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
                    <use xlink:href="/images/sprites.svg#svg--link"></use>
                </svg>
            </a>
        </h2>
        <nav class=" [ deck ] ">
            {% for item in collection %}
                {% if year != item.date.getFullYear() %}
                    {%- set year = item.date.getFullYear() -%}
                    </nav>
                    <h2 id="{{ year }}">
                        {{ year }}
                        <small>({{ collection | getCountByYear(year) }})</small>
                        <a href="#{{ year }}" class="fragment-anchor">
                            <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
                                <use xlink:href="/images/sprites.svg#svg--link"></use>
                            </svg>
                        </a>
                    </h2>
                    <nav class=" [ deck ] ">
                {% endif %}
                {{ deckItem(item, global.now, collections.all, webmentions) }}
            {% endfor %}
        </nav>
    </div>

    <div class=" [ meta ] ">
        <h3>Browse by category:</h3>
        <ul class=" [ meta__list ] ">
            {% for lookup in collections.categories %}<li><a href="/{{ lookup.plural }}/">{{ lookup.properPlural }}</a></li>{% endfor %}
        </ul>
        <h3>Here are some tags that you can explore, too:</h3>
        <ul class=" [ meta__list ] ">
            {% for lookup in collections.tags | sort %}<li><a href="/tag/{{ lookup }}">#{{ lookup }}</a></li>{% endfor %}
        </ul>
    </div>

    {% include 'ads.njk' %}

</div>
