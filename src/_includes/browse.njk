{% if previousPost or nextPost %}
    <nav hidden class=" [ widget widget--browse ] ">
        {% if previousPost %}
            <a class=" [ widget-anchor-previous ] " href="{{ previousPost.url }}">{{ previousPost.title }}</a>
        {% endif %}
        {% if nextPost %}
            <a class=" [ widget-anchor-next ] " href="{{ nextPost.url }}">{{ nextPost.title }}</a>
        {% endif %}
    </nav>
{% endif %}
