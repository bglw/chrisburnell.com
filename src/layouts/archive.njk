---
layout: base
hfeed: true
truncate: true
---
{%- set collection = collections[related_collection] -%}
{%- set count = collection.length -%}
{%- set latest_year = collection[0].date.getFullYear() -%}
{%- set first_year = collection[count-1].date.getFullYear() -%}
<div id="content" class=" [ content ] [ wrap ] [ archive ] ">

	<h1 id="title" class=" [ title ] ">
		<span class=" [ p-name ] ">{{ title | safe }}</span>
	</h1>

	<div class=" [ details ] ">
		<p class=" [ p-summary ] ">{{ description | replace('.', '') | safe }}{% if first_year != latest_year %}, dating from <a href="#{{ first_year }}">{{ first_year }}</a>â€“<a href="#{{ latest_year }}">{{ latest_year }}</a>{% endif %}.</p>
		{% sparkline collection, first_year, latest_year %}
	</div>

	<div class=" [ content__body ] [ h-feed ] {% if toc %}[ generate-toc ] {% endif %}">
		{%- set year = latest_year -%}
		<h2 id="{{ year }}">
			{{ year }} <small>({{ collection | getCountByYear(year) }})</small>
		</h2>
		<nav class=" [ deck ] ">
			{% for item in collection %}
				{% if item.date.getFullYear() != year %}
					{%- set year = item.date.getFullYear() -%}
					</nav>
					<h2 id="{{ year }}">
						{{ year }} <small>({{ collection | getCountByYear(year) }})</small>
					</h2>
					<nav class=" [ deck ] ">
				{% endif %}
				{%- set responses = item.url | getWebmentions -%}
				{% include 'item-deck.njk' %}
			{% endfor %}
		</nav>
	</div>

	{% include 'meta-archive.njk' %}

	{% include 'ads.njk' %}

</div>
