---
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: /tag/{{ tag }}/
eleventyComputed:
  title: "Tagged: <q>{{ tag | capitalizeFormat }}</q>"
  description: "All of my posts tagged <q>{{ tag | capitalizeFormat }}</q>."
hfeed: true
truncate: true
---
{%- set collection = collections[tag] | arePublished | reverse -%}
{%- set count = collection.length -%}
{%- set latest_year = collection[0].date.getFullYear() -%}
{%- set first_year = collection[count-1].date.getFullYear() -%}
<div id="content" class=" [ content ] [ wrap ] [ archive ] ">

	<h1 id="title" class=" [ title ] ">
		<span class=" [ p-name ] ">{{ title | safe }}</span>
	</h1>

	<div class=" [ description ] [ p-summary ] ">
		<p>{% if count > 1 %}All {{ count | numberStringFormat }}{% else %}Just the one{% endif %} of my posts tagged <q>{{ tag | capitalizeFormat }}</q>.</p>
	</div>

	<div class=" [ content__body ] {% if toc %}[ generate-toc ] {% endif %}">
		<nav class=" [ deck ] [ h-feed ] ">
			{% for item in collection %}
				{%- set responses = item.url | getWebmentions -%}
				{% include 'items/deck.njk' %}
			{% endfor %}
		</nav>
	</div>

	<div class=" [ meta ] ">
		{% include 'meta/archive.njk' %}
	</div>

</div>
