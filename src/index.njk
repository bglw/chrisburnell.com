---
layout: page
title: The Homepage
carbon: true
coil: true
eleventyComputed:
  lede: "<span aria-hidden=\"true\">{{ site.lede | safe }}</span>"
  tagline: "{{ site.tagline | safe }}"
---
{% from 'macros/deckItem.njk' import deckItem %}
{% from 'macros/shelfItem.njk' import shelfItem %}

{% if collections.todayRSVPs.length %}
    <h2 id="today-rsvps">
        <a href="/rsvps/">Events Iâ€™m Attending Today</a>
        <a href="#today-rsvps" class=" [ fragment-anchor ] ">
            <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
                <use xlink:href="/images/sprites.svg#svg--link"></use>
            </svg>
        </a>
    </h2>
    <nav class=" [ deck ] ">
        {% for item in collections.todayRSVPs %}
            {{ deckItem(item, global.now, collections.all, webmentions, false) }}
        {% endfor %}
    </nav>
{% endif %}

{% if collections.futureRSVPs.length %}
    <h2 id="upcoming-rsvps">
        <a href="/rsvps/">Upcoming Events</a>
        <a href="#upcoming-rsvps" class=" [ fragment-anchor ] ">
            <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
                <use xlink:href="/images/sprites.svg#svg--link"></use>
            </svg>
        </a>
    </h2>
    <nav class=" [ deck ] ">
        {% for item in collections.futureRSVPs %}
            {{ deckItem(item, global.now, collections.all, webmentions, false) }}
        {% endfor %}
    </nav>
{% endif %}

{% if collections.throwbackPosts.length %}
    <div class=" [ box ] [ owl--medium ] ">
        <h2 id="on-this-day">
            On This Day
            <a href="#on-this-day" class=" [ fragment-anchor ] ">
                <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
                    <use xlink:href="/images/sprites.svg#svg--link"></use>
                </svg>
            </a>
        </h2>
        <nav class=" [ deck ] ">
            {% for item in collections.throwbackPosts | limit(site.limits.snapshot) %}
                {{ deckItem(item, global.now, collections.all, [], false) }}
            {% endfor %}
        </nav>
    </div>
{% endif %}

<h2 id="writing">
    <a href="/writing/">Latest Writing</a>
    <a href="#writing" class=" [ fragment-anchor ] ">
        <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
            <use xlink:href="/images/sprites.svg#svg--link"></use>
        </svg>
    </a>
</h2>
<nav class=" [ deck ] [ h-feed ] ">
    {% for item in collections.writingPosts | limit(site.limits.snapshot) %}
        {{ deckItem(item, global.now, collections.all, webmentions) }}
    {% endfor %}
</nav>

<h2 id="posts">
    <a href="/archive/">More Posts</a>
    <a href="#posts" class=" [ fragment-anchor ] ">
        <svg fill="currentColor" aria-hidden="true" focusable="false" width="1em" height="1em">
            <use xlink:href="/images/sprites.svg#svg--link"></use>
        </svg>
    </a>
</h2>
<nav class=" [ deck ] [ h-feed ] ">
    {% for item in collections.featurePostsNotWriting | limit(site.limits.snapshot) %}
        {{ deckItem(item, global.now, collections.all, webmentions) }}
    {% endfor %}
</nav>

<nav class=" [ navigator ] ">
    <a class=" [ button ] " href="/archive/">Browse the Archive</a>
</nav>
