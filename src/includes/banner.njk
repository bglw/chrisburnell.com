{% if banner %}
    {% set banners = banner | toArray %}
    <picture class=" [ banner ] ">
        {% if banners.length == 1 %}
            <source srcset="/images/banners/{{ banners[0] | replace('.jpg', '.avif') | replace('.png', '.avif') }}"
                    type="image/avif" />
            <source srcset="/images/banners/{{ banners[0] | replace('.jpg', '.webp') | replace('.png', '.webp') }}"
                    type="image/webp" />
            <img alt="" class=" [ u-photo ] " src="/images/banners/{{ banners[0] }}" role="presentation">
        {% else %}
            <source srcset="
{%- for item in banners -%}
    /images/banners/{{ item | replace('jpg', 'avif') | replace('png', 'avif') }}
    {% if item.includes('@') %}
        {{ item.split('@')[1].split('.')[0] }}
    {% endif %}
    {% if not loop.last %},{% endif %}
{%- endfor -%}"
                    type="image/avif" />
            <source srcset="
{%- for item in banners -%}
    /images/banners/{{ item | replace('jpg', 'webp') | replace('png', 'webp') }}
    {% if item.includes('@') %}
        {{ item.split('@')[1].split('.')[0] }}
    {% endif %}
    {% if not loop.last %},{% endif %}
{%- endfor -%}"
                    type="image/webp" />
            <img    alt="" class=" [ u-photo ] " role="presentation"
                    src="/images/banners/{{ banners | last }}"
                    srcset="
{%- for item in banners -%}
    /images/banners/{{ item }}
    {% if item.includes('@') %}
        {{ item.split('@')[1].split('.')[0] }}
    {% endif %}
    {% if not loop.last %},{% endif %}
{%- endfor -%}">
        {% endif %}
    </picture>
{% endif %}
