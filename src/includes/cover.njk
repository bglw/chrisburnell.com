{% if cover %}
    <picture class=" [ cover ] ">
        {% if cover.includes('://') %}
            <img alt="" class=" [ u-photo ] " role="presentation" src="{{ cover }}">
        {% else %}
            <source srcset="/images/covers/{{ cover | replace('.jpg', '.avif') | replace('.png', '.avif') }}"
                    type="image/avif" />
            <source srcset="/images/covers/{{ cover | replace('.jpg', '.webp') | replace('.png', '.webp') }}"
                    type="image/webp" />
            <img    alt="" class=" [ u-photo ] " role="presentation"
                    src="/images/covers/{{ cover }}">
        {% endif %}
    </picture>
{% endif %}
