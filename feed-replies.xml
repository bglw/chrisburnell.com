---
layout: feed
searchable: false
sitemap:
  exclude: true

title: Full Feed
lede: All of my posts.
category_path: ''
---

{%- assign posts = site.posts | concat: site.beer | concat: site.bookmarks | concat: site.music | concat: site.notes | concat: site.pens | sort: 'date' | reverse -%}
{%- for page in posts -%}
    {%- if page.in_reply_to -%}
        {%- assign posts_with_replies = posts_with_replies | push: page -%}
    {%- endif -%}
{%- endfor -%}
{% for page in posts_with_replies limit: site.feed_limit %}
    {% include components/item-feed.html %}
{% endfor %}
